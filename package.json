{
  "name": "ts_express",
  "version": "1.0.0",
  "path": "/demo/",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:client\" \"npm run dev:server\"",
    "build": "npm-run-all clean --parallel build:*",
    "clean": "rimraf public/assets dist release",
    "start": "node dist/index.js",
    "dev:client": "vite serve --config vite.config.ts",
    "dev:server": "nodemon --exec ts-node -w src src/server.ts",
    "build:client": "vite build --config vite.config.prod.ts --emptyOutDir",
    "build:server": "tsc && cp -r src/config *.conf dist/",
    "lint:fix": "tslint --fix -c tslint.json -p tsconfig.json && git add .",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "release": "npm-run-all clean build release:copy release:deps release:package",
    "release:copy": "cross-env-shell \"shx mkdir -p release/$npm_package_app && shx cp -r dist/  *.json *.conf release/$npm_package_app\" ",
    "release:deps": "cross-env-shell \"cd release/$npm_package_app && npm install --production\" ",
    "release:package": "cross-env-shell \"cd release && tar -zcvf $npm_package_app.tar.gz $npm_package_app\" "
  },
  "dependencies": {
    "body-parser": "^1.19.1",
    "compression": "^1.7.4",
    "connect-history-api-fallback": "^1.6.0",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "http-proxy-middleware": "^2.0.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.12",
    "@types/ws": "^8.2.2",
    "@vitejs/plugin-vue": "^1.10.2",
    "autoprefixer": "^10.4.0",
    "axios": "^0.24.0",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.12",
    "less": "^4.1.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shx": "^0.3.3",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.4.4",
    "vant": "^3.3.6",
    "vite": "^2.7.0",
    "vite-plugin-style-import": "^1.4.0",
    "vue": "^3.2.23",
    "vue-router": "^4.0.12",
    "vue-tsc": "^0.28.10",
    "vuex": "^4.0.2"
  }
}
